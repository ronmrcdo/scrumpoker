{
	"formatter": {
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 120,
		"quoteStyle": "double",
		"trailingComma": "none"
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useImportType": "off"
			}
		}
	}
}
